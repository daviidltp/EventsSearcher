---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="w-50 md:w-52 lg:w-40 mx-2 rounded-lg shadow-md overflow-hidden relative cursor-pointer aspect-[3/4]">
  <img
    src={src}
    alt={alt}
    class="absolute top-0 left-0 w-full h-full object-cover transition-transform duration-300 ease-in-out hover:scale-110"
  />
</div>
