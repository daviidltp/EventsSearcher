---
interface Props {
  titulo: string;
  imagenes: { src: string; alt: string }[];
}

const { titulo, imagenes } = Astro.props;

import Caratula from './Caratula.astro';
---

<section class="text-left py-6 px-5">
    <h2 class="text-3xl font-bold mb-4">{titulo}</h2>
    <div class="flex justify-start gap-1 flex-wrap">
      {imagenes.map((imagen) => (
        <Caratula src={imagen.src} alt={imagen.alt} />
      ))}
    </div>
  </section>